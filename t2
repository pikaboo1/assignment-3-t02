bfast = float(input('Enter cost of breakfast: $'))
lun = float(input('Enter cost of lunch: $'))
din = float(input('Enter cost of supper: $'))
final = (bfast + lun + din)
fbfast = "{:.2f}".format(bfast)
flun = "{:.2f}".format(lun)
fdin = "{:.2f}".format(din)
total = "{:.2f}".format(final)

print('Meal            Cost')
print(f'Breakfast    $ {fbfast}')
print(f'Lunch        $ {flun}')
print(f'Supper       $ {fdin}')
print(f'Total        $ {total}')
